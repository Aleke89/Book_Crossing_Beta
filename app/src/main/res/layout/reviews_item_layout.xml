<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".userprofile.reviewsfragment.User_Profile_Reviews_Fragment">
    <RelativeLayout
        android:id="@+id/user_profile_reviews"
        android:background="@drawable/border_shadow"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:paddingBottom="10dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/user_profile_reviews_for_pngs"
            android:layout_width="110dp"
            android:layout_height="110dp">

            <ImageView
                android:id="@+id/user_profile_reviews_book"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/book_png" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/ic_baseline_access_time_24" />
        </RelativeLayout>

        <RatingBar
            android:id="@+id/user_profile_reviews_rating"
            style="@style/Widget.AppCompat.RatingBar.Indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/user_profile_reviews_for_pngs" />

        <TextView
            android:id="@+id/user_profile_reviews_book_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/user_profile_reviews_rating"
            android:layout_toRightOf="@id/user_profile_reviews_for_pngs"
            android:text="Name of book"
            android:textColor="@color/gray"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/user_profile_reviews_book_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_profile_reviews_book_name"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/user_profile_reviews_for_pngs"
            android:text="Author of book"
            android:textColor="@color/gray"
            android:textSize="18dp" />
    </RelativeLayout>

</LinearLayout>


