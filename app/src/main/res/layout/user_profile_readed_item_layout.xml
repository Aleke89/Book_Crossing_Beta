<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".userprofile.readingfragment.User_Profile_Reading_Fragment">

    <RelativeLayout

        android:id="@+id/user_profile_readed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/border_shadow"
        android:paddingBottom="10dp">

        <RelativeLayout
            android:id="@+id/user_profile_readed_book_png"
            android:layout_width="110dp"
            android:layout_height="110dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/book_png" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/tick" />
        </RelativeLayout>


        <TextView
            android:id="@+id/user_profile_readed_book_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/user_profile_readed_book_png"
            android:text="Name of book"
            android:textColor="@color/gray"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/user_profile_readed_book_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_profile_readed_book_name"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/user_profile_readed_book_png"
            android:text="Author of book"
            android:textColor="@color/gray"
            android:textSize="18dp" />
    </RelativeLayout>

</RelativeLayout>