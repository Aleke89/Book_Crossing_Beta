<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".userprofile.readingfragment.User_Profile_Reading_Fragment">
    <RelativeLayout
        android:id="@+id/user_profile_reading"
        android:background="@drawable/border_shadow"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:paddingBottom="10dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/user_profile_reading_book_png"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/book_png" />

        <TextView
            android:id="@+id/user_profile_reading_book_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/user_profile_reading_book_png"
            android:text="Name of book"
            android:textColor="@color/gray"
            android:textSize="18dp"
            android:textStyle="bold" />
        <TextView
            android:text="Author of book"
            android:textColor="@color/gray"
            android:textSize="18dp"
            android:layout_below="@id/user_profile_reading_book_name"
            android:layout_toRightOf="@id/user_profile_reading_book_png"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</LinearLayout>