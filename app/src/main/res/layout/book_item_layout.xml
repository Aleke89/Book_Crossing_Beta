<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/book_background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/book_img"
        android:layout_width="120dp"
        android:layout_height="130dp"

        />

    <TextView
        android:id="@+id/book_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/book_img"
        android:text="Name of Book"
        android:textColor="@color/black"
        android:textSize="16dp" />
    <TextView
        android:id="@+id/book_author"
        android:layout_toRightOf="@+id/book_img"
        android:layout_below="@+id/book_name"
        android:text="Author"
        android:textSize="16dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/book_genre"
        android:layout_below="@id/book_author"
        android:layout_toRightOf="@id/book_img"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="Genre:"
        android:textSize="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/book_genre_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/book_author"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/book_genre"
        android:text="Classic"
        android:textColor="@color/black"
        android:textSize="16dp" />

    <RatingBar
        android:id="@+id/book_rating"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/book_genre"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/book_img"
        android:numStars="5"
        android:progressTint="#FFCC01"
        android:stepSize="0.1" />

    <TextView
        android:id="@+id/book_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/book_rating"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/book_img"
        android:text="@string/Amount"
        android:textSize="16dp" />
    <TextView
        android:textSize="16dp"
        android:id="@+id/book_int"
        android:text="1"
        android:layout_toRightOf="@id/book_amount"
        android:layout_below="@id/book_rating"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>

